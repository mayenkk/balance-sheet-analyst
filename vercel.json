{
  "version": 2,
  "builds": [
    { "src": "backend/app/main.py", "use": "@vercel/python" },
    { "src": "frontend/package.json", "use": "@vercel/static-build" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "backend/app/main.py" },
    { "src": "/(.*)", "dest": "frontend/$1" }
  ],
  "env": {
    "DATABASE_URL": "@database_url",
    "REDIS_URL": "@redis_url",
    "SECRET_KEY": "@secret_key",
    "GEMINI_API_KEY": "@gemini_api_key",
    "ALLOWED_ORIGINS": "http://localhost:3000,http://localhost:8000,https://your-vercel-app.vercel.app",
    "MAX_FILE_SIZE": "52428800",
    "UPLOAD_DIR": "/tmp/uploads",
    "PDF_UPLOAD_DIR": "/tmp/pdfs",
    "CHUNK_SIZE": "1000",
    "CHUNK_OVERLAP": "200",
    "MAX_CHUNKS_PER_COMPANY": "100",
    "CHROMA_PERSIST_DIR": "/tmp/chroma_db",
    "EMBEDDING_MODEL": "all-MiniLM-L6-v2",
    "TOP_K_RESULTS": "5",
    "SIMILARITY_THRESHOLD": "0.7",
    "MAX_CONTEXT_LENGTH": "8000",
    "GEMINI_MODEL": "gemini-1.5-pro",
    "GEMINI_MAX_TOKENS": "4000",
    "GEMINI_TEMPERATURE": "0.3"
  }
}